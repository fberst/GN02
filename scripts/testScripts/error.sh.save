#!/bin/bash

############################
#Generic color functions
############################

NC='tput sgr0'			#NO COLOR
RED='tput setaf 1'		#RED
GREEN='tput setaf 2'	#GREEN
BLUE='tput setaf 4'		#BLUE

info() { #print green text
	echo "$($GREEN)$*$($NC)"
}

error() { #print red text 
	echo "$($RED)$*$($NC)"
}

errorExit() {
	error $2
	exit $1
}

